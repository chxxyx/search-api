generator client {
  provider = "prisma-client-js"
}

// 데이터베이스 연동 
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 유저 모델 
model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique  // 유저 아이디(이메일)
  userInfo UserInfo? 
}

// 유저정보 모델 
model UserInfo {
  user    User?   @relation(fields: [userId], references: [id])
  userId  Int     @id
  age     String  
  gender  String  
  region  String  
  
  @@unique([userId]) // userId를 외래키이자 기본키로 사용
}

// 검색어 모델
model Searchkeyword {
  id        Int      @id @default(autoincrement())
  keyword   String                      // 검색어
  createdAt DateTime @default(now())    // 검색시간
  user_id   Int?
  ip        String? 

  @@unique([keyword, user_id, ip])
}